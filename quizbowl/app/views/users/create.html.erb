<% if session[:user_id].blank? %>

<div class="row">
<div class="large-6 columns">
  <%= image_tag "QuizBowlLogo.png" %>
</div>

<div class="large-6 columns">

<div class="page-header">
  <h4>Sign Up! Everybody's doing it!</h4>
</div>

<%= form_tag users_url, :method => 'post' do %>
      <div class="form-group">
        <label for="first">Username:</label>
        <input type="text" name="username" class="form-control" id="username" placeholder="Username" value="<%=@username%>">
      </div>
      <div class="form-group">
        <label for="first">First Name:</label>
        <input type="text" name="first" class="form-control" id="first" placeholder="John">
      </div>
      <div class="form-group">
        <label for="last">Last Name:</label>
        <input type="text" name="last" class="form-control" id="last" placeholder="Doe">
      </div>
      <div class="form-group">
        <label for="email">Sex:</label>
        <input type="text" name="sex" class="form-control" id="sex" placeholder="male or female">
      </div>
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="text" name="email" class="form-control" id="email" placeholder="john.doe@example.com" value="<%=@email%>">
      </div>
        <div class="form-group">
        <label for="age">Age:</label>
        <input type="text" name="age" class="form-control" id="age" placeholder="age">
      </div>
      <div class="form-group">
        <label for="phone">Phone Number:</label>
        <input type="text" name="phone" class="form-control" id="phone" placeholder="312.123.4567">
      </div>
      <div class="form-group">
        <label for="add_l1">St Address:</label>
        <input type="text" name="add_l1" class="form-control" id="add_l1" placeholder="123 Main St">
      </div>
      <div class="form-group">
        <label for="city">City:</label>
        <input type="text" name="city" class="form-control" id="city" placeholder="Chicago">
      </div>
      <div class="form-group">
        <label for="state">State:</label>
        <input type="text" name="state" class="form-control" id="state" placeholder="IL">
      </div>
      <div class="form-group">
        <label for="zip">Zip Code:</label>
        <input type="text" name="zip" class="form-control" id="zip" placeholder="60615">
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" name="password" class="form-control" id="password" placeholder="password">
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" name="password_confirmation" class="form-control" id="password_confirmation" placeholder="password">
      </div>
      <br>
      <button type="submit" class="button [tiny small large]">Submit</button>
    </form>
<% end%>
</div>
</div>


<% else %>
  <script type="text/javascript">
    window.location.href="/lobbys"
  </script>
<% end %>