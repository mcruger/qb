
<h1 class = "text-center"> Hi <%=@user.first%>, here's you profile.  Update it if you need to.</h1>
<div class="row">

<div class="large-1 columns"></div>
  <div class="large-11 columns">

    <%= form_tag "/users/#{@user.id}", :method => 'patch' do %>

      <div class="form-group">
        <%= label_tag :first %>
        <%= text_field_tag :first, @user.first, class: 'form-control', placeholder: 'Enter First Name Here' %>
      </div>

      <div class="form-group">
        <%= label_tag :last %>
        <%= text_field_tag :last, @user.last, class: 'form-control', placeholder: 'Enter Last Name Here' %>
      </div>

      <div class="form-group">
        <%= label_tag :email %>
        <%= text_field_tag :email, @user.email, class: 'form-control', placeholder: 'Enter Email Here' %>
      </div>

      <div class="form-group">
        <%= label_tag :city %>
        <%= text_field_tag :city, @user.city, class: 'form-control', placeholder: 'Enter City Here' %>
      </div>
      <div class="form-group">
        <%= label_tag :state %>
        <%= text_field_tag :state, @user.state, class: 'form-control', placeholder: 'Enter State Here' %>
      </div>

      <div class="form-group">
        <%= label_tag :zip %>
        <%= text_field_tag :zip, @user.zip, class: 'form-control', placeholder: 'Enter Zip Here' %>
      </div>
      <div class="form-group">
        <%= label_tag :age %>
        <%= text_field_tag :age, @user.age, class: 'form-control', placeholder: 'Enter Age Here' %>
      </div>

      <%= submit_tag 'Update Profile', class: 'button [tiny small large]' %>
    <% end %>
    <%= link_to "Delete Your Account", user_path(@user.id), :method => 'delete', confirm: "Are you sure you wanna delete awesomeness?" %>

</div>
</div>
</div>


