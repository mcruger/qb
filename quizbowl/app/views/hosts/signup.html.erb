<div class="row">
<div class="large-6 columns">
  <%= image_tag "QuizBowlLogo.png" %>
</div>

<div class="large-6 columns">


  <h4>Be a Host. Make the World a Better Place.</h4>


<%= form_tag "/hosts", :method => 'post' do %>
<label for= "hosttype">Host Type
          <select>
            <option value="bar">Bar</option>
            <option value="school">School</option>
            <option value="individual">Individual</option>
            <option value="other">Other</option>
          </select>
        </label>
      </div>

<div class="form-group large-6 columns">

      <div class="form-group">
        <label for="first">Hostname:</label>
        <input type="string" name="username" class="form-control" id="username" placeholder="Joe's Bar & Grill">
      </div>
      <div class="form-group">
        <label for="first">Primary Contact Name:</label>
        <input type="string" name="first" class="form-control" id="first" placeholder="Manager Joe">
      </div>
      
<!--  <div class="form-group">
        <label for="last">Last Name:</label>
        <input type="string" name="last" class="form-control" id="last" placeholder="Doe">
      </div> -->
      <div class="form-group">
        <label for="email">Email:</label>
        <input type="string" name="email" class="form-control" id="email" placeholder="john.doe@example.com">
      </div>
      <div class="form-group">
        <label for="password">Phone:</label>
        <input type="string" name="password" class="form-control" id="password" placeholder="312-123-4567">
      </div>
      <div class="form-group">
        <label for="age">Street Address:</label>
        <input type="int" name="age" class="form-control" id="age" placeholder="123 First Street">
      </div>
      <div class="form-group">
        <label for="city">Street Address 2:</label>
        <input type="string" name="city" class="form-control" id="city" placeholder="Never Understood This Field">
      </div>
      <div class="form-group">
        <label for="state">City:</label>
        <input type="string" name="state" class="form-control" id="state" placeholder="Chicago">
      </div>
      <div class="form-group">
        <label for="state">State:</label>
        <input type="string" name="state" class="form-control" id="state" placeholder="IL">
      </div>
      <div class="form-group">
        <label for="zip">Zip Code:</label>
        <input type="int" name="zip" class="form-control" id="zip" placeholder="60615">
      </div>
      <div class="form-group">
        <label for="password">Password:</label>
        <input type="string" name="password" class="form-control" id="password" placeholder="password">
      </div>
      <br>
      <button type="submit" class="button [tiny small large]">Submit</button>
    </form>
<% end%>
</div>
</div>